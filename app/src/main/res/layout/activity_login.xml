<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@mipmap/bg3"
    tools:context="dragonzonee.com.strengthen.FirstPart_Login.LoginActivity">


    <EditText
        android:id="@+id/et_user"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:textSize="12dp"
        android:maxLines="1"
        android:singleLine="true"
        android:background="#00000000"
        android:hint="Please input your username"
        android:textColorHint="@color/white"
        android:textColor="@color/lightpink"
        android:layout_alignTop="@+id/tv_user"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginStart="20dp"
        />

    <TextView
        android:id="@+id/tv_password"
        android:layout_width="45dp"
        android:layout_height="30dp"
        android:text="密码"
        android:textColor="@color/white"
        android:background="@color/mycolor_darkgray"
        android:textSize="12dp"
        android:gravity="center"
        android:layout_below="@+id/tv_user"
        android:layout_alignStart="@+id/tv_user"
        android:layout_marginTop="34dp"/>

    <EditText
        android:id="@+id/et_password"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:textSize="12dp"
        android:maxLines="1"
        android:singleLine="true"
        android:inputType="textPassword"
        android:background="#00000000"
        android:textColor="@color/lightgreen"
        android:textColorHint="@color/white"
        android:hint="Please input your password"
        android:layout_alignTop="@+id/tv_password"
        android:layout_alignStart="@+id/et_user"/>

    <Button
        android:text="注册"
        android:textSize="12dp"
        android:textColor="@color/white"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/bt_login"
        android:layout_alignEnd="@+id/et_password"
        android:id="@+id/bt_signup"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@mipmap/icon2_circle"
        android:layout_marginTop="34dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:text="登陆"
        android:textSize="12dp"
        android:textColor="@color/white"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="59dp"
        android:id="@+id/bt_login"
        android:layout_below="@+id/tv_password"
        android:layout_alignStart="@+id/tv_password"/>

    <CheckBox
        android:id="@+id/cb_savecodes"
        android:text="记住密码"
        android:textSize="12dp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_password"
        android:layout_alignEnd="@+id/et_password"
        android:layout_marginTop="11dp"
        />

    <TextView
        android:text="用户名"
        android:background="@color/mycolor_darkgray"
        android:layout_width="45dp"
        android:layout_height="30dp"
        android:textSize="12dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginLeft="17dp"
        android:id="@+id/tv_user"
        android:layout_marginStart="18dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"/>


    <ImageView
        android:id="@+id/iv_username_right"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@mipmap/right"
        android:visibility="invisible"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/et_user"/>

    <ImageView
        android:id="@+id/iv_username_wrong"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@mipmap/wrong"
        android:visibility="invisible"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/et_user"/>


    <ImageView
        android:id="@+id/iv_password_right"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@mipmap/right"
        android:visibility="invisible"
        android:layout_alignTop="@+id/et_password"
        android:layout_marginTop="7dp"
        android:layout_toEndOf="@+id/et_password"/>



    <ImageView
        android:id="@+id/iv_password_wrong"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@mipmap/wrong"
        android:visibility="invisible"
        android:layout_alignTop="@+id/et_password"
        android:layout_marginTop="7dp"
        android:layout_toEndOf="@+id/et_password"/>


</RelativeLayout>
