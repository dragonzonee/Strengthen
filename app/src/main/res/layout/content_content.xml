<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="dragonzonee.com.strengthen.SecondPart_Locate.ContentActivity"
    tools:showIn="@layout/app_bar_content">

    <RelativeLayout
        android:id="@+id/relativeLO_map"
        android:background="@color/mycolor_gray"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.amap.api.maps.MapView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.amap.api.maps.MapView>

        <ImageView
            android:id="@+id/map_back_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/back_icon"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>


    </RelativeLayout>


    <!--RUNNING METHOD 33333  -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relativeLO_RM3"
        android:background="@color/mycolor_middlegray">

        <include layout="@layout/running_method3"></include>


        <!--布局内包括计时和计时图标-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="240dp"
            android:layout_marginLeft="55dp">

            <ImageView
                android:id="@+id/RM3_clock"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/clock"
                android:layout_centerVertical="true"
                />


            <!--小时-->
            <TextView
                android:id="@+id/RM3_tv_hour"
                android:text="0"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_toEndOf="@+id/RM3_clock"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_marginLeft="3dp"
                />


            <!--小时后的冒号-->
            <TextView
                android:id="@+id/RM3_tv_maohao1"
                android:text=":"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_toEndOf="@+id/RM3_tv_hour"
                android:layout_alignBaseline="@+id/RM3_tv_hour"
                />

            <!--分钟-->
            <TextView
                android:id="@+id/RM3_tv_minute"
                android:text="00"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_toEndOf="@+id/RM3_tv_maohao1"
                android:layout_alignBaseline="@+id/RM3_tv_maohao1"
                />


            <!--分钟后的冒号-->
            <TextView
                android:id="@+id/RM3_tv_maohao2"
                android:text=":"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_toEndOf="@+id/RM3_tv_minute"
                android:layout_alignBaseline="@+id/RM3_tv_minute"
                />

            <!--秒-->
            <TextView
                android:id="@+id/RM3_tv_second"
                android:text="00"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_toEndOf="@+id/RM3_tv_maohao2"
                android:layout_alignBaseline="@+id/RM3_tv_maohao2"
                />

        </RelativeLayout>


        <ImageView
            android:id="@+id/RM3_map_clicker"
            android:layout_marginTop="240dp"
            android:layout_width="315dp"
            android:layout_height="50dp"
            android:src="@mipmap/map_click_break2"/>

    </RelativeLayout>



