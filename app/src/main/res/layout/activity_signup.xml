<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_signup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@mipmap/bg3"
        tools:context="dragonzonee.com.strengthen.FirstPart_Login.SignupActivity">

        <ImageView
            android:id="@+id/signup_imageView"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@mipmap/icon2_circle"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"/>

        <TextView
            android:text="用户名"
            android:background="@color/mycolor_darkgray"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:textSize="12dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginLeft="17dp"
            android:id="@+id/tv_signup_user"
            android:layout_below="@+id/signup_imageView"
            android:layout_alignParentStart="true"
            android:layout_marginStart="28dp"
            android:layout_marginTop="42dp"/>

        <EditText
            android:id="@+id/et_signup_user"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:textSize="12dp"
            android:maxLines="1"
            android:singleLine="true"
            android:background="#00000000"
            android:hint="Please set your username"
            android:textColorHint="@color/white"
            android:textColor="@color/lightpink"
            android:layout_alignTop="@+id/tv_signup_user"
            android:layout_alignStart="@+id/signup_imageView"
            android:layout_marginStart="20dp"
            />

        <TextView
            android:id="@+id/tv_signup_password"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:text="密码"
            android:textColor="@color/white"
            android:background="@color/mycolor_darkgray"
            android:textSize="12dp"
            android:gravity="center"
            android:layout_below="@+id/tv_signup_user"
            android:layout_alignStart="@+id/tv_signup_user"
            android:layout_marginTop="34dp"/>

        <EditText
            android:id="@+id/et_signup_password"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:textSize="12dp"
            android:inputType="textPassword"
            android:maxLines="1"
            android:singleLine="true"
            android:background="#00000000"
            android:textColor="@color/lightgreen"
            android:textColorHint="@color/white"
            android:hint="Please set your password"
            android:layout_alignTop="@+id/tv_signup_password"
            android:layout_alignStart="@+id/et_signup_user"/>

        <Button
            android:text="登陆"
            android:textSize="12dp"
            android:textColor="@color/white"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginTop="41dp"
            android:id="@+id/bt_signup_login"
            android:layout_below="@+id/et_signup_password"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
