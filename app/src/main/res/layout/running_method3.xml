<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:background="@drawable/runningmethod3_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <!--大数字，用于显示跑步距离-->
    <TextView
        android:id="@+id/RM3_tv_current_distance"
        android:text="00.0"
        android:textSize="100dp"
        android:textColor="@color/white"
        android:layout_width="204dp"
        android:layout_height="125dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="100dp"/>


    <!--大数字的说明信息-->
    <TextView
        android:id="@+id/RM3_tv_current_distance_annotation"
        android:text="剩余时间(S)："
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="105dp"
        android:layout_alignStart="@+id/RM3_tv_current_distance"
        android:layout_marginLeft="5dp"/>




    <!--平均速度的说明文字-->
    <TextView
        android:id="@+id/RM3_tv_average_speed_annotation"
        android:text="平均速度"
        android:textSize="12dp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RM3_tv_average_speed"
        android:layout_alignStart="@+id/RM3_tv_average_speed"
        android:layout_marginLeft="8dp"/>




    <!--目标速度-->
    <TextView
        android:id="@+id/RM3_tv_target_speed"
        android:text="0.00"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/RM3_tv_average_speed_unit"
        android:layout_alignBottom="@+id/RM3_tv_average_speed_unit"
        android:layout_marginLeft="115pt"/>


    <!--目标速度的说明文字-->
    <TextView
        android:id="@+id/RM3_tv_target_speed_annotation"
        android:text="目标速度"
        android:textSize="12dp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RM3_tv_target_speed"
        android:layout_alignStart="@+id/RM3_tv_target_speed"
        android:layout_marginLeft="8dp"
        />

    <!--平均速度的单位-->

    <!--平均速度-->
    <TextView
        android:id="@+id/RM3_tv_average_speed"
        android:text="0.00"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="335dp"
        android:layout_marginLeft="40pt"
        />

    <!--目标速度的单位-->
    <TextView
        android:id="@+id/RM3_tv_target_speed_unit"
        android:text="Km/h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="10dp"
        android:layout_alignBaseline="@+id/RM3_tv_target_speed"
        android:layout_alignBottom="@+id/RM3_tv_target_speed"
        android:layout_toEndOf="@+id/RM3_tv_target_speed_annotation"
        android:layout_marginLeft="5dp"/>




    <!--GO图标-->
    <ImageView
        android:id="@+id/RM3_go"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@mipmap/go1"
        android:layout_marginBottom="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <!--pause图标-->
    <ImageView
        android:id="@+id/RM3_pause"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@mipmap/pause"
        android:layout_alignTop="@+id/RM3_go"
        android:layout_marginLeft="60dp"
        android:layout_alignParentStart="true"/>

    <!--Stop图标-->
    <ImageView
        android:id="@+id/RM3_stop"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@mipmap/stop"
        android:layout_alignTop="@+id/RM3_go"
        android:layout_marginRight="60dp"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/RM3_tv_average_speed_unit"
        android:text="Km/h"
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:textSize="10dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/RM3_tv_average_speed"
        android:layout_alignBottom="@+id/RM3_tv_average_speed"
        android:layout_toEndOf="@+id/RM3_tv_average_speed"/>

    <TextView
        android:id="@+id/RM3_slide"
        android:text="I"
        android:textSize="120dp"
        android:gravity="center"
        android:layout_width="3dp"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="90dp"/>

    <TextView
        android:id="@+id/RM3_tv_num_of_Group_first"
        android:text="第"
        android:textSize="14dp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/RM3_tv_num_of_Group_number"
        android:layout_marginTop="55dp"
        android:layout_alignLeft="@+id/RM3_slide"
        android:layout_marginLeft="15dp"

        />

    <TextView
        android:id="@+id/RM3_tv_num_of_Group_number"
        android:text="0"
        android:textSize="70dp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/RM3_tv_current_distance"
        android:layout_alignLeft="@+id/RM3_tv_num_of_Group_first"
        android:layout_marginLeft="15dp"
        />

    <TextView
        android:id="@+id/RM3_tv_num_of_Group_latter"
        android:text="组"
        android:textSize="14dp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/RM3_tv_num_of_Group_first"
        android:layout_alignRight="@+id/RM3_tv_num_of_Group_number"
        android:layout_marginRight="-15dp"
        android:layout_marginTop="19dp"
        />

    <TextView
        android:id="@+id/RM3_tv_type_of_running"
        android:text="慢跑中..."
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/RM3_tv_current_distance"
        android:layout_marginBottom="-20dp"
        android:layout_alignLeft="@+id/RM3_tv_num_of_Group_first"/>


</RelativeLayout>